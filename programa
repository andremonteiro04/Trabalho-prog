int main()
{
     char nome_cliente[n1], numero_cliente[n2], data_nascimento[n2], filmes_que_ja_alugou[n1], filme_alugado[n1], preco_filme[n2], data_locacao[n2], data_devolucao[n2], condicao_filme[n1];
     int pen;
